generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ALUNO
  PROFESSOR
}

model Usuario {
  id        Int        @id @default(autoincrement())
  nome      String
  email     String     @unique
  senha     String
  role      Role       @default(ALUNO)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  perguntas Pergunta[]
  respostas Resposta[] // nova relação
}

model Pergunta {
  id        Int      @id @default(autoincrement())
  titulo    String
  descricao String
  createdAt DateTime @default(now())

  usuario   Usuario @relation(fields: [usuarioId], references: [id])
  usuarioId Int

  respostas Resposta[] // nova relação
}

model Resposta {
  id         Int      @id @default(autoincrement())
  texto      String
  createdAt  DateTime @default(now())

  usuario    Usuario @relation(fields: [usuarioId], references: [id])
  usuarioId  Int

  pergunta   Pergunta @relation(fields: [perguntaId], references: [id])
  perguntaId Int
}
